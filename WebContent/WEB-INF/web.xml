<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>FabFlixRESTAPI</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>FabFLIX REST API</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
	<init-param>
	  <param-name>com.sun.jersey.config.property.packages</param-name>
	  <param-value>cs122b.restcontroller</param-value>
	</init-param>
	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>MoviesServlet</servlet-name>
    <servlet-class>cs122b.Servlets.Movies</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MoviesServlet</servlet-name>
    <url-pattern>/movies</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>StarsServlet</servlet-name>
    <servlet-class>cs122b.Servlets.Stars</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StarsServlet</servlet-name>
    <url-pattern>/stars</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FabFLIX REST API</servlet-name>
  	<url-pattern>/api/*</url-pattern>
  </servlet-mapping>
  <resource-ref>
  <description>
    Resource reference to a factory for java.sql.Connection
    instances that may be used for talking to a particular
    database that is configured in the Context.xml file.
  </description>
  <res-ref-name>
    jdbc/moviedb
  </res-ref-name>
  <res-type>
    javax.sql.DataSource
  </res-type>
  <res-auth>
    Container
  </res-auth>
</resource-ref>
</web-app>